            <li><a href="#contact">聯繫</a></li>
            <li><button class="language-toggle">中文</button></li>
        </ul>
    </div>
</nav>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        const nav = document.querySelector('nav');
        if (nav) {
            nav.classList.add('nav-visible');
        }

        const langToggle = document.querySelector('.language-toggle');
        if (langToggle && langToggle instanceof HTMLElement) {
            langToggle.addEventListener('click', function(event) {
                event.preventDefault();
                const currentLang = this.textContent?.trim();
                if (!currentLang) {
                    return;
                }
                try {
                    if (currentLang === '中文') {
                        this.textContent = 'EN';
                    } else {
                        this.textContent = '中文';
                    }
                } catch (error) {
                    console.error('Error updating language toggle:', error);
                }
            });
        }
    });
</script>