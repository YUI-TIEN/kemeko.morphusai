                        opacity = 0.8;
                        scale = 1.2;
                    }
                }
                
                arrow.style.transform = `rotate(${angle}deg) scale(${scale})`;
                arrow.style.opacity = opacity.toString();
            });
            
            isAnimating = false;
        });
    }
    
    // ä½¿ç”¨ RAF å„ªåŒ–å‹•ç•«æ€§èƒ½
    function updateArrows(mouseX: number, mouseY: number): void {
        if (isAnimating || isHoveringQuote) return; // æ˜‡è¯ç‹€æ…‹æ™‚ä¸åŸ·è¡Œé¼ æ¨™è·Ÿéš¨
        
        isAnimating = true;
        requestAnimationFrame(() => {
            const sectionRect = arrowSection.getBoundingClientRect();
            const sectionX = sectionRect.left;
            const sectionY = sectionRect.top;
            
            arrows.forEach(arrow => {
                // è¨ˆç®—ç®­é ­æŒ‡å‘é¼ æ¨™çš„è§’åº¦
                const deltaX = mouseX - (sectionX + arrow.centerX);
                const deltaY = mouseY - (sectionY + arrow.centerY);
                const angle = Math.atan2(deltaY, deltaX) * 180 / Math.PI;
                
                // è¨ˆç®—è·é›¢ä¸¦èª¿æ•´é€æ˜åº¦
                const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
                const maxDistance = 300; // æœ€å¤§å½±éŸ¿è·é›¢
                const minOpacity = 0.1; // æœ€å°é€æ˜åº¦
                const maxOpacity = 0.6; // æœ€å¤§é€æ˜åº¦
                
                // è·é›¢è¶Šé é€æ˜åº¦è¶Šä½
                let opacity = maxOpacity - (distance / maxDistance) * (maxOpacity - minOpacity);
                opacity = Math.max(minOpacity, Math.min(maxOpacity, opacity));
                
                arrow.style.transform = `rotate(${angle}deg) scale(1)`;
                arrow.style.opacity = opacity.toString();
            });
            
            isAnimating = false;
        });
    }
    
    // é¼ æ¨™ç§»å‹•äº‹ä»¶
    function handleMouseMove(event: MouseEvent): void {
        updateArrows(event.clientX, event.clientY);
    }
    
    // é¼ æ¨™é›¢é–‹æ™‚é‡ç½®ç®­é ­
    function handleMouseLeave() {
        arrows.forEach(arrow => {
            arrow.style.transform = 'rotate(0deg) scale(1)';
            arrow.style.opacity = '0.2'; // é‡ç½®ç‚ºçµ±ä¸€çš„ä½é€æ˜åº¦
        });
    }
    
    // åˆå§‹åŒ–
    setTimeout(createArrows, 100); // ç­‰å¾… DOM å®Œå…¨è¼‰å…¥
    
    // æ–‡å­—å€åŸŸ hover äº‹ä»¶ - æ˜‡è¯æ•ˆæœ
    finalQuote.addEventListener('mouseenter', function() {
        isHoveringQuote = true;
        pointToQuote();
    });
    
    finalQuote.addEventListener('mouseleave', function() {
        isHoveringQuote = false;
        handleMouseLeave();
    });
    
    // æ·»åŠ äº‹ä»¶ç›£è½å™¨
    arrowSection.addEventListener('mousemove', handleMouseMove);
    arrowSection.addEventListener('mouseleave', handleMouseLeave);
    
    // è¦–çª—å¤§å°æ”¹è®Šæ™‚é‡æ–°å‰µå»ºç®­é ­
    window.addEventListener('resize', function() {
        setTimeout(createArrows, 100);
    });
});
</script>

